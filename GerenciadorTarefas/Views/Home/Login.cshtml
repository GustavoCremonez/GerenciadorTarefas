@{
    ViewData["Title"] = "Login Page";
}

<section class="d-flex align-items-center">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black shadow">
                    @if (TempData["MensagemSucesso"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
                            @TempData["MensagemSucesso"]
                        </div>
                    }

                    @if (TempData["MensagemErro"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
                            @TempData["MensagemErro"]
                        </div>
                    }

                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <h4 class="mt-1 mb-5 pb-1">Gerenciador de tarefas - Entrar</h4>
                                </div>

                                <form>
                                    <div class="form-floating mb-3">
                                        <input type="email" id="email" class="form-control" placeholder="Digite seu email" />
                                        <label class="form-label" for="email">Email</label>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input type="password" id="password" class="form-control" placeholder="Digite sua senha"/>
                                        <label class="form-label" for="password">Senha</label>
                                    </div>

                                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                        <button class="btn btn-primary btn-block mb-3" type="button">
                                           Entrar
                                        </button>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Ainda não tem uma conta?</p>
                                        <a type="button" class="btn btn-outline-danger" asp-controller="Home" asp-action="Register">Registre-se</a>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center">
                            <div class="px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Sou mais que apenas uma agenda</h4>
                                <p class="small mb-0">
                                   Fui desenvolvido para ser seu amigo, não te deixar esquecer das coisas importantes e te dar um controle da sua rotina. 
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>